<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/styles/styles.css">
    <title>Threads</title>
</head>
<body>
    <!-- header -->
    <%- include('components/header') %>
    <section class="threads-panel">
        <div class="threads">
            <div class="button-container threads-button">
                <button class="new-thread"><a href="#">Add New Thread</a></button> <!-- get new create form -->
            </div>

            <% threads.forEach(thread => {%>
                <div class="thread">
                    <div class="thread-info">
                        <h1><a href="/messages/get-messages/<%= thread.id_thread%>"><%= thread.title %></a></h1> <!-- get thread view with messages -->
                        <p><%= thread.text %></p>
                        <p>By <a href="#"><%= thread.email %></a></p> <!-- TODO: implement email to -->
                    </div>
                    <div class="delete-button">
                        <button><a href="#">Delete</a></button>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
    <!-- footer -->
    <%- include('components/footer') %>
</body>
</html>